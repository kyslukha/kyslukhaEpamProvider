<?xml version="1.0" encoding="UTF-8"?>
<web-app  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://java.sun.com/xml/ns/javaee"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    <servlet>
        <description>This servlet sends file to client</description>
        <display-name>ListTariffUserServlet.do</display-name>
        <servlet-name>ListTariffUserServlet</servlet-name>
        <servlet-class>ua.epam.provider.servlet.tariff.TariffUserServlet.java</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListTariffUserServlet</servlet-name>
        <url-pattern>/ListTariffUserServlet.do</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/provider</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <display-name>Provider</display-name>

    <welcome-file-list>
        <welcome-file>login.do</welcome-file>
    </welcome-file-list>

</web-app>